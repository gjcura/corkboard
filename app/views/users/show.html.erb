<% provide(:title, @user.name) %>
<br>
<br>
<br>
<br>


<div class="container">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  
  <div class="span8">
    <% if @user.ads.any? %>
      <h3>Ads (<%= @user.ads.count %>)</h3>
      <ol class="ads">
        <%= render @ads %>
      </ol>
      <%= will_paginate @ads %>
    <% end %>
  </div>
  
  
</div>
